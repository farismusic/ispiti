<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="tableViewGradovi" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colGradId" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="colGradNaziv" prefWidth="100.0" text="Naziv" />
          <TableColumn fx:id="colGradStanovnika" prefWidth="90.0" text="Stanovnika" />
          <TableColumn fx:id="colGradDrzava" prefWidth="130.0" text="Država" />
          <TableColumn fx:id="colGradNadmorskaVisina" prefWidth="90.0" text="Nadmorska visina" />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="120.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnDodajGrad" mnemonicParsing="false" prefWidth="Infinity" onAction="#actionDodajGrad" text="Dodaj grad" />
            <Button fx:id="btnDodajDrzavu" mnemonicParsing="false" prefWidth="Infinity" onAction="#actionDodajDrzavu" text="Dodaj državu" />
            <Button fx:id="btnIzmijeniGrad" mnemonicParsing="false" prefWidth="Infinity" onAction="#actionIzmijeniGrad" text="Izmijeni grad" />
            <Button fx:id="btnObrisiGrad" mnemonicParsing="false" prefWidth="Infinity" onAction="#actionObrisiGrad" text="Obriši grad" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
